{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@react/*": ["src/react-ui/*"],
      "@helpers/*": ["src/sthelpers/*"]
    }
  },
  "include": ["src/**/*"]
}
